# Example environment configuration

# Camera settings
CAMERA_INDEX=0                     # default webcam index

# Video saving options
SAVE_VIDEO=true                    # "true" or "false" to save processed video
OUTPUT_DIR=data/processed          # where to save processed HUD videos
OUTPUT_FILENAME=training_session   # base name for saved video files

# Capture resolution
FRAME_WIDTH=1280                   # desired capture width (if supported)
FRAME_HEIGHT=720                   # desired capture height (if supported)

# Display settings
DISPLAY_WINDOW_NAME=SmartTrainingHUD

# Pose model selection
POSE_MODEL_TYPE=mediapipe          # or "stub" for no real pose model

# Logging
LOG_LEVEL=INFO                     # INFO / DEBUG / WARNING / ERROR
